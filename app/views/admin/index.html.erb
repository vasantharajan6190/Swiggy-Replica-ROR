<div class="container justify-content-around mt-4">
<h4 class="mb-2 pb-4" style="font-size: 28px;font-weight: 600;border-bottom:2px solid gray;">Your Items</h4>
</div>
<div class="container mb-5 d-flex justify-content-start">
<%= link_to "Add New Item", new_admin_path,class: "btn font-weight-bold text-white btn-sm px-3", style: "background:#ff5d0b;border-radius:0" %>
</div>
<div class="container">
<div class="row">
<% @items.each  do |f| %>
    <div class=" col-lg-4 mb-5">
    <div class="card" style="width: 18rem;border:0;">
    <%= image_tag f["img"],class: "card-img-top img-fluid" %>
    <div class="card-body">
    <p class="text-muted text-left m-0 p-0 font-weight-bold"><%= f["hotel"].upcase %></p>  
        <div class="card-title d-flex">
       <% if f["foodtype"]==="veg" %>
       <img style="margin-top:3px;" src="https://oslocks.files.wordpress.com/2014/11/vegetarian-symbol.png" width="20"  height="20"/>
       <% else %>
       <img style="margin-top:5px;" src="https://infoseekershub.com/wp-content/uploads/2019/08/non-veg.jpg" width="15"  height="15"/>
       <% end %>

        <h5 class="ml-2"><%= f["name"].capitalize %></h5>
        </div>
        <p class="card-subtitle mb-2 text-muted"><%= f["describe"].capitalize %></p>
        <div class="d-flex justify-content-between">
        <div><p class="text-muted" style="font-weight:600;">Rs.<%= f["price"] %></p></div>
        <div><%= link_to "Delete",admin_path(f),method: :delete,class: "btn btn-sm btn-danger px-4 font-weight-bold text-white",style: "border-radius:0;font-size:14px;" %></div>
        </div>
      </div>
    </div>
    </div>
<% end %>